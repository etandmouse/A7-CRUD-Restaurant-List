<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name" class="col-form-label">
            名稱(必填):
          </label>
          <input type="text" class="form-control" placeholder="Sababa 沙巴巴中東美食" name="name" value='{{ restaurant.name }}'
            required>
        </div>
        <div class="form-group">
          <label for="category" class="col-form-label">
            類別(必填):
          </label>
          <input type="text" class="form-control" placeholder="中東料理" name="category" value='{{ restaurant.category }}'
            required>
        </div>
        <div class="form-group">
          <label for="location" class="col-form-label">
            地址(必填):
          </label>
          <input type="text" class="form-control" placeholder="台北市羅斯福路三段 283 巷 17 號" name="location"
            value='{{ restaurant.location }}' required>
        </div>
        <div class="form-group">
          <label for="rating" class="col-form-label">
            推薦分數(必填):
          </label>
          <input type="number" class="form-control" step="0.1" placeholder="4.1" name="rating"
            value='{{ restaurant.rating }}' required>
        </div>
        <div class="form-group">
          <label for="phone" class="col-form-label">
            電話:
          </label>
          <input type="tel" class="form-control" placeholder="02 2363 8009" name="phone" value='{{ restaurant.phone }}'>
        </div>
        <div class="form-group">
          <label for="description" class="col-form-label">
            敘述:
          </label>
          <input type="text" class="form-control" placeholder="沙巴巴批塔是台灣第一家純手工批塔專賣店..." name="description"
            value='{{ restaurant.description }}'>
        </div>
        <div class="form-group">
          <label for="google_map" class="col-form-label">
            google map連結:
          </label>
          <input type="url" class="form-control" placeholder="https://goo.gl/maps/BJdmLuVdDbw" name="google_map"
            value='{{ restaurant.google_map }}'>
        </div>
        <div class="form-group">
          <label for="image" class="col-form-label">
            圖片超連結:
          </label>
          <input type="url" class="form-control"
            placeholder="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5635/01.jpg" name="image"
            value='{{ restaurant.image }}'>
        </div>
        <div class="form-group">
          <label for="name_en" class="col-form-label">
            英文名稱:
          </label>
          <input type="text" class="form-control" placeholder="Sababa Pita Bar" name="name_en"
            value='{{ restaurant.name_en }}'>
        </div>
        <div class="form-group">
          <a href="/" class="btn btn-secondary">取消</a>
          <button type="submit" class="btn btn-primary">儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>